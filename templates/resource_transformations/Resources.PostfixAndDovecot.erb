<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.PostfixAndDovecot.PostfixAndDovecot'])">
    <resourceList>
      <resource name="PostfixAndDovecot" xdt:Transform="Insert">
        <property name="DatabaseHost"><%= @postfix_databaseHost %></property>
        <property name="DatabaseName">vmail</property>
        <property name="Username">postfix_agent</property>
        <property name="Password"><%= @postfix_password %></property>
        <property name="MailIpAddress"><%= @postfix_clusterIp %></property>
        <property name="Mail2IpAddress"><%= @postfix_clusterIp %></property>
        <property name="SmtpIpAddress"><%= @postfix_clusterIp %></property>
        <property name="ImapIpAddress"><%= @postfix_clusterIp %></property>
        <property name="PopIpAddress"><%= @postfix_clusterIp %></property>
        <property name="WebmailIpAddress"><%= @postfix_clusterIp %></property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>
