<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.ActiveDirectory.ActiveDirectory'])">
    <resourceList>
      <resource name="ActiveDirectory" xdt:Transform="Insert">
        <property name="DomainName"><%= @activedirectory_domainName %></property>
        <property name="ShortDomainName"><%= @activedirectory_shortDomainName %></property>
        <property name="Username"><%= @activedirectory_username %></property>
        <property name="Password"><%= @activedirectory_password %></property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>
