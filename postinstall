apt-get install wget
wget http://apt.puppetlabs.com/puppetlabs-release-trusty.deb
sudo dpkg -i puppetlabs-release-trusty.deb
sudo apt-get update

apt-get install -y ruby-dev puppetmaster git apache2-utils curl rubygems-integration build-essential

export DEBIAN_FRONTEND=noninteractive
apt-get -q -y install mysql-server

MYSQL_PASSWORD=`date +%s | sha256sum | base64 | head -c 16 ; echo`
mysqladmin -u root password $MYSQL_PASSWORD

echo "127.0.0.1 puppet" >> /etc/hosts

echo "---
:backends:
  - yaml
  - mysql

:yaml:
  :datadir: /etc/puppet/hieradata

:mysql:
  :host: localhost
  :user: root
  :pass: $MYSQL_PASSWORD
  :database: hiera

  :query: SELECT val FROM configuration WHERE var='%{key}'


:hierarchy:
  - "%{::atomia_role_1}"
  - "%{::atomia_role_2}"
  - "%{::atomia_role_3}"
  - bootstrap


:logger: console
" > /etc/puppet/hiera.yaml

cd /etc/puppet
puppet module install puppetlabs-puppetdb 

puppet apply -e "
class { 'puppetdb::globals':
  version => '2.3.7-1puppetlabs1',
}
class { 'puppetdb':
        # database_username => 'puppetdb',
        # database_password => 'puppetdb',
        # database_name     => 'puppetdb',
        report_ttl        => '7d',
    }

    # Configure the puppet master to store reports
    class { 'puppetdb::master::config':
        manage_report_processor => true,
        enable_reports          => true
    }
"

sudo apt-get install -y libmysqlclient-dev
gem install hiera-mysql mysql

mkdir -p /etc/puppet/atomia/service_files

echo "mod \"atomia\", :git =>\"git://github.com/atomia/puppet-atomia.git\", :ref => \"master\" " > /etc/puppet/Puppetfile

cd /etc/puppet

gem install puppet -v 3.8.3
gem install librarian-puppet 
librarian-puppet install
cp /etc/puppet/modules/atomia/files/default_files/* /etc/puppet/atomia/service_files/

echo "
node default {
        hiera_include('classes')
}
" > /etc/puppet/manifests/site.pp
